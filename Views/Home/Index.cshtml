@{
    Layout = null;
}


<html ng-app="MovieApp">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="@Url.Content("~/Scripts/AngularJs/angular.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/AngularJs/angular-route.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/AngularJs/app.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/AngularJs/Moviecontroller.js")" type="text/javascript"></script>

    <script src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.10.6/moment-with-locales.js"></script>
    <script src="~/Scripts/AngularJs/dist/angular-moment-picker.min.js"></script>
    <link href="~/Scripts/AngularJs/dist/angular-moment-picker.css" rel="stylesheet">

    <script src="~/Scripts/AngularJs/Actorcontroller.js" type="text/javascript"></script>
    <script src="~/Scripts/AngularJs/ProducerController.js" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Movie Management", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#!actorlist">Actor</a></li>
                    <li><a href="#!ProducerList">Producer</a></li>
                    <li><a href="#!list">Movies</a></li>
                    @*<li><a href="#!list">Movies</a></li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content" ng-view>
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>
</body>
</html> 